<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sources_overlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <Button
            android:id="@+id/webview_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="https://.../..."
            android:textAlignment="textStart" />


        <!-- Add your Source Buttons here -->

        <Button
            android:id="@+id/webview_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="file://android_asset/..."
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/webview_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="data:text/html;base64,..."
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/webview_btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="content://io.hextree.webview/..."
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/webview_btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="file:///data/data/io.hextree.webviews/..."
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/webview_btn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="file:///data/app/.../lib"
            android:textAlignment="textStart" />

    </LinearLayout>

</ScrollView>